

<%= form_for @instructor do |f| %>  
    <%= f.label :First %>  
    <%= f.text_field :fname, value: @instructor.fname%>
    <%= f.label :Last %>  
    <%= f.text_field :lname, value: @instructor.lname%>   
    <%= f.label :age %>  
    <%= f.number_field :age, value: @instructor.age%>
    <%= f.label :salary %>  
    <%= f.text_field :salary, value: @instructor.salary%> 
    <%= f.label :education %>  
    <%= f.select :education, [['Champion','Champion'],
                             ['Master','Master'],
                             ['Pro','Pro']],
                             {:multiple => true} %>

    <%= f.submit %>
<% end %>


<%= link_to 'Delete', instructor_path(@instructor), method: :delete %>